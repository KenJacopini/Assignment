package chapter6.exercises;

import java.util.Scanner;

public class CoinToss {
	
	public static void tossCoin() {
		Scanner input = new Scanner(System.in);
		
			boolean head = false;
			boolean value;
			int store =0;
			int store1 =0;
				
			
			System.out.println("Head or Tail");
			value =input.hasNextBoolean();
			
			
				if (value == head) {					
					store = store + 1;
					
				if(value != head) {
					store1 += 1;

						}
					}
				
			


			}

			
			
			public static void main(String[] args) {
				CoinToss lem = new CoinToss();
				System.out.println(lem.tossCoin());
			}
}