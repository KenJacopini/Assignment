package chapter7.exercises;

import java.util.Scanner;

public class SalesTable {	
	
	public void getSales() {
		Scanner input = new Scanner(System.in);
		
		int totalDollar = 0;
		
		int [][] sales= {{250,100,76,9},{100,2,7,9},{54,23,45,6},{50,15,12,150},{40,23,7,1}};

//		
//		System.out.println("Enter SalesPerson Number: ");
//		salesPersonNumber = input.nextInt();
//		
//		System.out.println("Enter Product Number: ");
//		productNumber = input.nextInt();
//		
//		System.out.println("Enter Total Sales: ");		
//		totalDollar = input.nextInt();
		
	
			
			int sum=0;
			
			System.out.printf("%s%13s%15s%15s%15s%15s%n","Product","SalesPerson1","SalesPerson2","SalesPerson3","SalesPerson4","Total");
			for(int i=0;i<sales.length;i++) {				
				
				System.out.print(i+1);
				totalDollar =0;
				
				for(int product=0;product<sales[i].length;product++) {
					
					totalDollar += sales[i][product];
					
					System.out.printf("%15d",sales[i][product]);
					
					sum+=sales[i][product];
				}				
				System.out.printf("%17d", totalDollar);		
				
				System.out.println();				
				
				totalDollar += 0;
				
			}
			System.out.println("Ptotal");
			System.out.printf("%17d",sum);
			input.close();
		}
}